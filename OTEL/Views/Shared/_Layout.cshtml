<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Deneme Uygulamam</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(" Bilge Otel", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Anasayfa", "Index", "Home")</li>
                    <li>@Html.ActionLink("Hakkımızda", "Hakkimizda", "Home")</li>
                    <li>@Html.ActionLink("Odalar", "OdaGoruntule", "Home")</li>
                    <li>@Html.ActionLink("Rezervasyon", "RezervasyonYap", "Rezervasyon")</li>
                    <li>@Html.ActionLink("İletişim", "Iletisim", "Home")</li>
                    
                    
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="http:\\facebook.com" target="_blank">Facebook</a></li>
                    <li><a href="http:\\Twitter.com" target="_blank">Twitter</a></li>
                    <li><a href="http:\\foursquare.com" target="_blank">Foursquare</a></li>
                </ul>

            </div>
        </div>
    </div>
    <div  class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Bilge Otel </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery-unobtrusive") <!-- buraya ajax işlemlerinde  tüm viewlerde işlensin diye ekledik-->
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
